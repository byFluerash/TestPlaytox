<configuration>
<appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>transfers.log</file>
    <immediateFlush>true</immediateFlush>
    <encoder>
        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level - %msg%n</pattern>
    </encoder>
</appender>

<root level="INFO">
<appender-ref ref="FILE"/>
</root>
        </configuration>